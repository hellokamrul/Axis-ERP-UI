@model RegisterViewModel
@{
    Layout = null; // standalone page (same look as your login)
    ViewData["Title"] = "Register — Halo Axis";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --bg: #f7f9fc;
            --ink: #0b1320;
            --text: #0f172a;
            --muted: #64748b;
            --line: #e7ecf3;
            --primary: #1860ff;
            --dark: #0c1220;
        }

        html, body {
            height: 100%
        }

        body {
            margin: 0;
            background: var(--bg);
            color: var(--text);
            font-family: system-ui,-apple-system,Segoe UI,Roboto,Arial
        }

        .wrap {
            min-height: 100vh;
            display: grid;
            grid-template-columns: 1.25fr 1fr;
        }
        /* NOTE: in a .cshtml file escape at-rule with @@ */
        @@media (max-width: 992px) {
            .wrap {
                grid-template-columns: 1fr
            }

            .promo {
                order: 2
            }

            .auth {
                order: 1
            }
        }

        /* Left promo card */
        .promo {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 48px
        }

        .glass {
            width: min(720px,90%);
            aspect-ratio: 1.25/1;
            border-radius: 22px;
            padding: 22px;
            background: linear-gradient(180deg, rgba(24,96,255,.12), rgba(180,120,255,.11));
            box-shadow: inset 0 0 0 1px rgba(255,255,255,.25);
        }

        .glass-inner {
            width: 100%;
            height: 100%;
            border-radius: 18px;
            display: flex;
            align-items: center;
            padding: 40px;
            background: radial-gradient(800px 600px at 20% 15%, rgba(255,255,255,.55), transparent 60%), radial-gradient(1200px 800px at 90% 90%, rgba(255,255,255,.35), transparent 60%), linear-gradient(135deg, rgba(93,154,255,.22), rgba(255,167,243,.18));
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255,255,255,.35);
        }

        .promo h1 {
            font-weight: 800;
            line-height: 1.05;
            font-size: clamp(28px, 4.2vw, 56px);
            color: #0f172a;
            margin: 0
        }

        .promo .accent {
            color: var(--primary)
        }

        /* Right auth panel */
        .auth {
            display: flex;
            align-items: center;
            padding: 56px 6vw
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 800;
            font-size: 22px;
            color: #111827
        }

            .brand .logo {
                width: 30px;
                height: 30px;
                border-radius: 9px;
                display: inline-block;
                background: #39bdf8;
                box-shadow: 0 0 0 6px rgba(57,189,248,.15);
            }

        .welcome {
            margin-top: 16px
        }

            .welcome h2 {
                font-weight: 800;
                color: #0f172a
            }

            .welcome p {
                color: var(--muted);
                margin: 8px 0 18px
            }

        .form-control {
            border-color: var(--line)
        }

        .field-note {
            font-size: .9rem
        }

        .btn-dark {
            background: var(--dark);
            border-color: var(--dark)
        }

            .btn-dark:hover {
                filter: brightness(1.1)
            }

        .eye {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="wrap">
        <!-- Left side -->
        <section class="promo">
            <div class="glass">
                <div class="glass-inner">
                    <h1><span class="accent">Secure</span> Access to<br />Your HR Information</h1>
                </div>
            </div>
        </section>

        <!-- Right side -->
        <section class="auth">
            <div class="container-fluid" style="max-width:560px">
                <div class="brand mb-3">
                    <span class="logo"></span> Halo Axis HIRS
                </div>

                <div class="welcome">
                    <h2>Welcome!</h2>
                    <p>We’re excited to help you streamline your payroll and financial management. Let’s get started!</p>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
                <form asp-action="Register" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Robert" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Pattinson" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="you@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="Optional" />
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6 position-relative">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>

                    <div class="form-check my-3">
                        <input class="form-check-input" type="checkbox" id="agree" required>
                        <label class="form-check-label" for="agree">
                            I agree to the <a href="#">Privacy Policy</a> and <a href="#">Terms</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 py-2">Register</button>
                </form>


                <div class="text-center mt-4">
                    <span class="me-1">Already have an account?</span>
                    <a class="link-primary" asp-controller="Account" asp-action="Login">Sign In</a>
                </div>
            </div>
        </section>
    </div>

    <script>
        // Toggle both password fields
        const setupToggle = (inputId, iconId) => {
          const input = document.getElementById(inputId);
          const icon  = document.getElementById(iconId);
          icon?.addEventListener('click', () => {
            const isPw = input.type === 'password';
            input.type = isPw ? 'text' : 'password';
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
          });
        };
        setupToggle('pwd1','togglePwd1');
        setupToggle('pwd2','togglePwd2');
    </script>
</body>
</html>
