@{
    Layout = null; // full standalone page
    ViewData["Title"] = "Sign in — Halo Axis";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --bg: #f7f9fc;
            --ink: #0b1320;
            --text: #0f172a;
            --muted: #64748b;
            --line: #e7ecf3;
            --primary: #1860ff;
            --dark: #0c1220;
        }

        html, body {
            height: 100%
        }

        body {
            margin: 0;
            background: var(--bg);
            color: var(--text);
            font-family: system-ui,-apple-system,Segoe UI,Roboto,Arial
        }

        .wrap {
            min-height: 100vh;
            display: grid;
            grid-template-columns: 1.25fr 1fr;
        }

        @@media (max-width: 992px) {
            .wrap {
                grid-template-columns: 1fr;
            }

            .promo {
                order: 2;
            }

            .auth {
                order: 1;
            }
        }


        /* Left promo card */
        .promo {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 48px
        }

        .glass {
            width: min(720px,90%);
            aspect-ratio: 1.25/1;
            border-radius: 22px;
            padding: 22px;
            background: linear-gradient(180deg, rgba(24,96,255,.12), rgba(180,120,255,.11));
            box-shadow: inset 0 0 0 1px rgba(255,255,255,.25);
        }

        .glass-inner {
            width: 100%;
            height: 100%;
            border-radius: 18px;
            display: flex;
            align-items: center;
            padding: 40px;
            background: radial-gradient(800px 600px at 20% 15%, rgba(255,255,255,.55), transparent 60%), radial-gradient(1200px 800px at 90% 90%, rgba(255,255,255,.35), transparent 60%), linear-gradient(135deg, rgba(93,154,255,.22), rgba(255,167,243,.18));
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255,255,255,.35);
        }

        .promo h1 {
            font-weight: 800;
            line-height: 1.05;
            font-size: clamp(28px, 4.2vw, 56px);
            color: #0f172a;
            margin: 0
        }

        .promo .accent {
            color: var(--primary)
        }

        /* Right auth panel */
        .auth {
            display: flex;
            align-items: center;
            padding: 56px 6vw
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 800;
            font-size: 22px;
            color: #111827
        }

            .brand .logo {
                width: 30px;
                height: 30px;
                border-radius: 9px;
                display: inline-block;
                background: #39bdf8;
                box-shadow: 0 0 0 6px rgba(57,189,248,.15);
            }

        .welcome {
            margin-top: 16px
        }

            .welcome h2 {
                font-weight: 800;
                color: #0f172a
            }

            .welcome p {
                color: var(--muted);
                margin: 8px 0 18px
            }

        .form-control {
            border-color: var(--line)
        }

        .field-note {
            font-size: .9rem
        }

        .link-muted {
            color: #1d4ed8;
            text-decoration: underline;
            text-underline-offset: 2px
        }

        .btn-dark {
            background: var(--dark);
            border-color: var(--dark)
        }

            .btn-dark:hover {
                filter: brightness(1.1)
            }

        .eye {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="wrap">
        <!-- Left side -->
        <section class="promo">
            <div class="glass">
                <div class="glass-inner">
                    <h1><span class="accent">Secure</span> Access to<br />Your HR Information</h1>
                </div>
            </div>
        </section>

        <!-- Right side -->
        <section class="auth">
            <div class="container-fluid" style="max-width:520px">
                <div class="brand mb-3">
                    <span class="logo"></span> Halo Axis HIRS
                </div>

                <div class="welcome">
                    <h2>Welcome!</h2>
                    <p>We’re excited to help you streamline payroll and financial management. Let’s get started!</p>
                </div>
                <form asp-controller="Account" asp-action="Login" method="post">
                    @* @Html.AntiForgeryToken() *@
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3 position-relative">
                        <label class="form-label">Password</label>
                        <input name="password" id="pwd" type="password" class="form-control" required />
                        <i id="togglePwd" class="bi bi-eye-slash eye"></i>
                    </div>
                    <button type="submit" class="btn btn-dark w-100 py-2">Log In</button>
                </form>

                
                <div class="text-center mt-4">
                    <span class="me-1">Have not account?</span>
                    <a class="link-muted" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </div>
        </section>
    </div>

    <script>
        // toggle password visibility
        const pwd = document.getElementById('pwd');
        const toggle = document.getElementById('togglePwd');
        toggle?.addEventListener('click', () => {
          const isPw = pwd.type === 'password';
          pwd.type = isPw ? 'text' : 'password';
          toggle.classList.toggle('bi-eye');
          toggle.classList.toggle('bi-eye-slash');
        });
    </script>
</body>
</html>
